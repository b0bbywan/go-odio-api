{{ define "section-mpris" }}
<section class="section-card"
         id="mpris-section"
         hx-get="/ui/sections/mpris"
         hx-trigger="refreshMpris from:body"
         hx-swap="outerHTML">
	<div class="section-header">
		<h2 class="section-title">ğŸµ Media Players</h2>
		<span class="badge badge-green">{{ len . }} active</span>
	</div>

	<div class="space-y-3">
		{{ range . }}
			{{ template "mpris-player" . }}
		{{ else }}
			<div class="empty-state">
				<div class="empty-state-icon">ğŸµ</div>
				<p class="text-sm text-muted">No active media players</p>
			</div>
		{{ end }}
	</div>
</section>
{{ end }}
