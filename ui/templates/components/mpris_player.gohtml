{{ define "mpris-player" }}
<div id="player-{{ .Name }}" class="player-card">

	<!-- Player info (centered) -->
	<div class="text-center mb-3">
		<div class="player-name mb-1">{{ .DisplayName }}</div>
		{{ if or .Artist .Title }}
		<div class="player-meta">
			{{ if .Artist }}{{ .Artist }}{{ end }}{{ if and .Artist .Title }} â€“ {{ end }}{{ if .Title }}{{ .Title }}{{ end }}
		</div>
		{{ else }}
		<div class="text-sm text-subtle">No media playing</div>
		{{ end }}
		{{ if .Album }}
		<div class="player-meta-small">{{ .Album }}</div>
		{{ end }}
	</div>

	<!-- Volume control -->
	<div class="mb-3 px-2">
		<div class="flex items-center gap-2">
			<span class="text-xs text-zinc-400">ğŸ”Š</span>
			<input type="range"
			       class="volume-slider flex-1"
			       min="0"
			       max="100"
			       value="{{ printf "%.0f" (mul .Volume 100) }}"
			       oninput="updateVolume(this, '{{ .Name }}', 'mpris')"
			       title="Volume">
		</div>
	</div>

	<!-- Control buttons (centered) -->
	<div class="flex justify-center gap-2">
		<button class="btn" hx-post="/players/{{ .Name }}/previous" hx-swap="none" title="Previous track">â®</button>
		<button class="btn" onclick="togglePlayPause(this, '{{ .Name }}')" title="{{ if eq .State "Playing" }}Pause{{ else }}Play{{ end }}">
			{{ if eq .State "Playing" }}â¸{{ else }}â–¶{{ end }}
		</button>
		<button class="btn" hx-post="/players/{{ .Name }}/next" hx-swap="none" title="Next track">â­</button>
	</div>
</div>
{{ end }}
