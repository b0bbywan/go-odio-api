{{ define "pulseaudio-sink" }}
<div class="client-card">
	<!-- Client info -->
	<div class="content-area">
		<div class="player-name text-sm mb-2">
			{{ if .Application }}{{ .Application }}{{ else }}Unknown{{ end }}
		</div>

		<!-- Volume control -->
		<div class="flex items-center gap-2">
			<button class="text-base" onclick="toggleMute(this, '{{ .Index }}', 'audio-client')" title="Toggle mute">
				{{ if .Muted }}ðŸ”‡{{ else }}ðŸ”Š{{ end }}
			</button>
			<input type="range"
			       class="volume-slider flex-1"
			       min="0"
			       max="100"
			       value="{{ printf "%.0f" (mul .Volume 100) }}"
			       oninput="updateVolume(this, '{{ .Index }}', 'audio-client')"
			       title="Volume">
			<span class="text-xs text-zinc-400 w-8">{{ printf "%.0f%%" (mul .Volume 100) }}</span>
		</div>
	</div>
</div>
{{ end }}
